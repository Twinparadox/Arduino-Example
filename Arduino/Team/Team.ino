#include <LiquidCrystal.h>
LiquidCrystal lcd(12,11,5,4,3,2);

//통신회로
byte to[8]={0x1F,0x10,0x1F,0x10,0x1F,0x04,0x04,0x1F};
byte si[8]={0x01,0x01,0x09,0x09,0x15,0x15,0x01,0x01};
byte hoe1[8]={0x00,0x00,0x09,0x1D,0x09,0x15,0x09,0x01};
byte hoe2[8]={0x09,0x09,0x1F,0x01,0x01,0x01,0x00,0x00};
byte ro1[8]={0x00,0x00,0x1F,0x01,0x1F,0x10,0x1F,0x00};
byte ro2[8]={0x04,0x04,0x04,0x1F,0x00,0x00,0x00,0x00};

//팀명
byte won[8]={0x09,0x15,0x09,0x01,0x1F,0x09,0x0B,0x09};
byte ho1[8]={0x04,0x1F,0x00,0x04,0x0A,0x11,0x0A,0x04};
byte ho2[8]={0x04,0x04,0x04,0x1F,0x00,0x00,0x00,0x00};
byte yeol1[8]={0x01,0x09,0x17,0x15,0x17,0x09,0x01,0x01};
byte yeol2[8]={0x1F,0x01,0x01,0x1F,0x10,0x10,0x1F,0x00};
void tongsin()
{
  lcd.createChar(1,to);
  lcd.createChar(2,si);
  lcd.createChar(3,hoe1);
  lcd.createChar(4,hoe2);
  lcd.createChar(5,ro1);
  lcd.createChar(6,ro2);
  lcd.clear();
  lcd.write(1);
  lcd.write(2);
  lcd.write(3);
  lcd.write(5);
  lcd.setCursor(0,1);
  lcd.print("O");
  lcd.print("L");
  lcd.write(4);
  lcd.write(6);
  delay(3000);
  lcd.clear();
}
void team()
{
  lcd.createChar(1,won);
  lcd.createChar(2,ho1);
  lcd.createChar(3,ho2);
  lcd.createChar(4,yeol1);
  lcd.createChar(5,yeol2);
  lcd.clear();
  lcd.write(1);
  lcd.print("O");
  lcd.write(2);
  lcd.write(4);
  lcd.setCursor(0,1);
  lcd.print("L");
  lcd.print("T");
  lcd.write(3);
  lcd.write(5);
  delay(3000);
  lcd.clear();
}
void setup()
{
  lcd.begin(8,2);
}
void loop()
{
  tongsin();
  team();
}

